@model RegisterVM

<section class="signin-page account">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="block text-center">
                    <a class="logo" href="index.html">
                        <img src="images/logo.png" alt="">
                    </a>
                    <h2 class="text-center">Create Your Account</h2>
                    <div asp-validation-summary="ModelOnly" style="color:red"></div>
                    <form class="text-left clearfix" method="post">
                        <div class="form-group">
                            <input asp-for="Name" class="form-control" placeholder="Name">
                            <span asp-validation-for="Name" style="color:red"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Surname" class="form-control" placeholder="Surname">
                            <span asp-validation-for="Surname" style="color:red"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Username" class="form-control" placeholder="Username">
                            <span asp-validation-for="Username" style="color:red"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Email" class="form-control" placeholder="Email">
                            <span asp-validation-for="Email" style="color:red"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Password" class="form-control" placeholder="Password">
                            <span asp-validation-for="Password" style="color:red"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="CheckPassword" class="form-control" placeholder="Repeat Password">
                            <span asp-validation-for="CheckPassword" style="color:red"></span>
                        </div>
                        <div class="text-center">
                            <div class="login-toggle-btn">
                                <input asp-for="IsRemember">
                                <label for="remember">Remember me</label>
                                <a>Forgot Password?</a>
                            </div>
                            <button type="submit" class="btn btn-main text-center">Sign In</button>
                        </div>
                    </form>
                    <p class="mt-20">Already hava an account ?<a href="login.html"> Login</a></p>
                    <p><a href="forget-password.html"> Forgot your password?</a></p>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}